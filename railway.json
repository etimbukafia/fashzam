{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pip install -r requirements.txt"
    },
    "deploy": {
        "startCommand": "uvicorn main:app --host 0.0.0.0 --port 8000 --workers 4",
        "healthcheckPath": "/",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ALWAYS"
    }
}